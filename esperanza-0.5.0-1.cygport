GIT_URI="git://git.xmms.se/xmms2/${PN}.git"
inherit git qt4-qconf

DESCRIPTION="Qt4 XMMS2 client"
HOMEPAGE="http://wiki.xmms2.xmms.se/wiki/Client:Esperanza"
#SRC_URI="http://exodus.xmms.se/~tru/esperanza/${PV_MAJ_MIN}/${P}.tar.gz"
PATCH_URI="0.5.0-as-needed.patch"

QCONF_ARGS="--disable-growl"

src_install() {
	cd ${B}
	qt4_qmake_install

	doicon ${S}/data/images/esperanza.png
	make_desktop_entry esperanza Esperanza esperanza "AudioVideo;Audio;Player;Qt" "Qt4 XMMS2 client"
}
